{%- style -%}
  .footer-block__details-content li {
    height: 2rem !important;
    margin-bottom: 5px !important;
  }

  .footer-block__details-content li a {
    line-height: 2rem !important;
    padding: 0 !important;
    vertical-align: top !important;
  }

  .footer {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    background-color: {{ settings.footer_color }};
  }

  .footer__bottom-text {
    font-size: {{ section.settings.font_size_bottom }}rem;
    font-weight: {% if section.settings.font_weight_bottom == true %}bold{% else %}unset{% endif %};
  }

  .footer__top-newsletter-text {
    font-size: {{ section.settings.font_size_text_newsletter }}rem;
    font-weight: {% if section.settings.font_weight_text_newsletter == true %}bold{% else %}unset{% endif %};
    margin-bottom: 0 !important;
  }

  .footer__top-newsletter-heading {
    font-size: {{ section.settings.font_size_heading_newsletter }}rem;
    font-weight: {% if section.settings.font_weight_heading_newsletter == true %}bold{% else %}unset{% endif %};
  }

  .footer__top-newsletter-btn {
    font-size: {{ section.settings.font_size_button }}rem;
    font-weight: {% if section.settings.font_weight_button == true %}bold{% else %}unset{% endif %};
  }

  .footer svg {
    width: 2.5rem !important;
    height: 2.5rem !important;
  }

  .footer-block__newsletter {
    text-align: left;
  }

  .footer-block__btn {
    margin-top: 30px;
    background: {{ section.settings.newsletter_btn_color }};
    color: {{ section.settings.newsletter_btn_text_color }};  
    width: 100%;
    max-width: 250px;
    padding: 12px 5px;
    border-radius: 5px;
    text-align: center;
  }

  .footer-block__btn::after {
    display: none !important;
  }

  .footer, .footer h2, .footer a {
    color: {{ settings.footer_text_color }} !important;
  }

  .footer a {
    text-decoration: none !important;
  }

  .footer__content-bottom {
    border-top: .5px solid {{ settings.footer_text_color }} !important;
  }

  .footer svg {
    fill: {{ settings.footer_text_color }};
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .mobile {
    display: none;
  }

  @media screen and (min-width: 750px) {
    .footer {
      margin-top: {{ section.settings.margin_top }}px;
    }

    .section-{{ section.id }}-padding {
      padding: {{ section.settings.padding_sides }}px;
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  @media screen and (max-width: 750px) {
    .footer-block--newsletter {
      width: 100% !important;
      padding-left: 0 !important;
      padding-right: 0 !important;
    }
    .footer__blocks-wrapper {
      width: 100% !important;
      padding-top: 20px !important;
      padding-left: 0 !important;
      padding-right: 0 !important;
      border-top: .5px solid {{ settings.footer_text_color }} !important;
    }
    .footer__content-top {
      display: block !important;
    }
    .footer__list-social.list-social {
      justify-content: flex-start !important;
    }
    .footer__content-bottom, .footer__content-top {
      margin: 0 15px !important;
      padding: 0 !important;
    }
    .footer__payment, .footer__list-social {
      display: none;
    }
    .footer__payment {
      width: fit-content;
      margin: 0 auto;
    }
    .mobile {
      display: block !important;
    }
    .footer__list-social.mobile {
      display: flex !important;
    }
    .footer__bottom-info {
      display: block !important;
    }
    .footer__bottom-info, .footer__bottom-info div {
      width: 100% !important;
    }
    .footer__terms {
      text-align: center !important;
    }
  }
{%- endstyle -%}

<footer class="footer gradient section-{{ section.id }}-padding">
  {%- if section.blocks.size > 0 or section.settings.newsletter_enable or section.settings.show_social -%}
    <div class="footer__content-top" style="display:flex;justify-content:space-around;align-items:flex-start;">
      <div style="width: 50%;margin:0;padding:0 15px 20px 0;" class="footer-block--newsletter">
        {%- if section.settings.newsletter_enable -%}
          <div class="footer-block__newsletter">
            {%- if section.settings.newsletter_heading != blank -%}
              <h2 style="margin-bottom:10px;" class="footer-block__heading footer__top-newsletter-heading">{{ section.settings.newsletter_heading | escape }}</h2>
            {%- endif -%}
            {%- if section.settings.newsletter_text != blank -%}
              <p class="footer-block__details-content footer__top-newsletter-text" style="width: 100%;max-width: 450px;margin-top:0;line-height:21px;">{{ section.settings.newsletter_text | escape }}</p>
            {%- endif -%}
            {%- if section.settings.newsletter_btn_text != blank -%}
              <button style="border-radius: 5px;border:none;" class="footer-block__btn footer__top-newsletter-btn">{{ section.settings.newsletter_btn_text | escape }}</button>
            {%- endif -%}
            {% comment %} {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form' -%}
              <input type="hidden" name="contact[tags]" value="newsletter">
              <div class="newsletter-form__field-wrapper">
                <div class="field">
                  <input
                    id="NewsletterForm--{{ section.id }}"
                    type="email"
                    name="contact[email]"
                    class="field__input"
                    value="{{ form.email }}"
                    aria-required="true"
                    autocorrect="off"
                    autocapitalize="off"
                    autocomplete="email"
                    {% if form.errors %}
                      autofocus
                      aria-invalid="true"
                      aria-describedby="ContactFooter-error"
                    {% elsif form.posted_successfully? %}
                      aria-describedby="ContactFooter-success"
                    {% endif %}
                    placeholder="{{ 'newsletter.label' | t }}"
                    required
                  >
                  <label class="field__label" for="NewsletterForm--{{ section.id }}">
                    {{ 'newsletter.label' | t }}
                  </label>
                  <button type="submit" class="newsletter-form__button field__button" name="commit" id="Subscribe" aria-label="{{ 'newsletter.button_label' | t }}">
                    {% render 'icon-arrow' %}
                  </button>
                </div>
                {%- if form.errors -%}
                  <small class="newsletter-form__message form__message" id="ContactFooter-error">{% render 'icon-error' %}{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</small>
                {%- endif -%}
              </div>
              {%- if form.posted_successfully? -%}
                <h3 class="newsletter-form__message newsletter-form__message--success form__message" id="ContactFooter-success" tabindex="-1" autofocus>{% render 'icon-success' %}{{ 'newsletter.success' | t }}</h3>
              {%- endif -%}
            {%- endform -%} {% endcomment %}
          </div>
        {%- endif -%}
        {%- if section.settings.show_social -%}
