{% schema %}
{
  "name": "Video with text",
  "class": "section",
  "settings": [
    {
      "type": "select",
      "id": "desktop_content_alignment",
      "options": [
        {
          "value": "left",
          "label": "t:sections.image-with-text.settings.desktop_content_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.image-with-text.settings.desktop_content_alignment.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.image-with-text.settings.desktop_content_alignment.options__3.label"
        }
      ],
      "default": "left",
      "label": "t:sections.image-with-text.settings.desktop_content_alignment.label"
    },
    {
      "type": "color",
      "id": "text_side_background_color",
      "label": "Right half background color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Mobile layout"
    },
    {
      "type": "select",
      "id": "mobile_content_alignment",
      "options": [
        {
          "value": "left",
          "label": "t:sections.image-with-text.settings.mobile_content_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.image-with-text.settings.mobile_content_alignment.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.image-with-text.settings.mobile_content_alignment.options__3.label"
        }
      ],
      "default": "left",
      "label": "t:sections.image-with-text.settings.mobile_content_alignment.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    },
    {
      "type": "range",
      "id": "font_size_heading",
      "min": 0,
      "max": 5,
      "step": 0.2,
      "unit": "rem",
      "label": "Font size",
      "default": 1.4      
    },
    {
      "type": "checkbox",
      "id": "font_weight_heading",
      "default": false,
      "label": "Font weight bold"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Text",
      "default": "MEET PUMPKIN"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "URL"
    },
    {
      "type": "range",
      "id": "font_size_btn",
      "min": 0,
      "max": 5,
      "step": 0.2,
      "unit": "rem",
      "label": "Font size",
      "default": 1.4      
    },
    {
      "type": "checkbox",
      "id": "font_weight_btn",
      "default": false,
      "label": "Font weight bold"
    }
  ],
  "blocks": [
    {
      "type": "video",
      "name": "Video item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "url",
          "id": "video",
          "label": "Video URL"
        },    
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Info"
        }
      ]
    },
    {
      "type": "image",
      "name": "Image item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Info"
        }
      ]
    }
  ]
}
{% endschema %}

<script>
  var blocks = [];
  
  function selectContent(id) {
    blocks.forEach(function(id) {
      document.getElementById("content-" + id).classList.toggle("active");      
    });
  }
</script>

<div class="video-with-text">
  <div class="visual-content">
    
  </div>
  <div class="text-content">
    <h2>{{ section.settings.heading }}</h2>
    {% if section.blocks.size > 0 %}
      <div class="icons">
        {% for block in section.blocks %}
          <script>
            blocks.push = {{ block.id }};
          </script>
          <img id="img-{{ block.id }}" onClick="selectContent('{{ block.id }}')" src="{{ block.settings.icon | img_url }}">
        {% endfor %}
      </div>
      {% for block in section.blocks %}
        <div id="content-{{ block.id }}" class="block-content">
          <h2 class="block-content-heading">{{ block.settings.heading }}</h2>
          <p class="block-content-text">{{ block.settings.text }}</p>
        </div>
      {% endfor %}    
    {% endif %}

    <a class="button" href="{{ section.settings.btn_url }}">{{ section.settings.btn_text }}</a>
    
  </div>
</div>

<script>
  document.getElementById("content-" + blocks[0]).classList.toggle("active");  
</script>

