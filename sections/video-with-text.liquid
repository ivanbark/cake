<style>
  .video-with-text {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0;
    display: flex;
  }

  .visual-content {
    width: 50%;
  }

  .visual-content .video {
    display: none;
    width: 100%;
  }

  .visual-content .img {
    display: none;
  }

  .visual-content .img img {
    width: 100%;
    height: auto;
    margin-bottom: -9px;
  }
  
  .text-content {
    text-align: {{ section.settings.desktop_content_alignment }};
    background-color: {{ section.settings.text_side_background_color }};
    width: 50%;
  }

  .text-content-inner {
    max-width: 560px;
    margin: 0 auto;
    display: table;
    height: 100%;
  }

  .text-content-inner .container {
    display: table-cell;
    vertical-align: middle;
  }

  .text-content h2 {
    margin: 0;
    font-size: {{ section.settings.font_size_heading }}rem;
    font-weight: {% if section.settings.font_weight_heading == true %}bold{% else %}unset{% endif %};
  }

  .text-content .button {
    font-size: {{ section.settings.font_size_btn }}rem !important;
    font-weight: {% if section.settings.font_weight_btn == true %}bold{% else %}unset{% endif %} !important;
    background-color: {{ section.settings.bg_color_btn }} !important;
    color: {{ section.settings.text_color_btn }} !important;
    height: 40px;
    width: 298px;
    padding: 8px;
  }

  .text-content .button:hover {
    background-color: {{ section.settings.text_color_btn }} !important;
    color: {{ section.settings.bg_color_btn }} !important;
  }

  .text-content .button::before, .text-content .button::after {
    content: unset;
  }
  
  .block-content {
    display: none;
    margin-bottom: 62px;
  }

  .block-content h2 {
    margin: 0 0 35px 0 !important;
  }

  .block-content h2 p {
    margin: 0 !important;
  }

  .block-content p {
    margin: 0 !important;
  }

  .block-content.active {
    display: block;
  }

  .visual.active {
    display: block;
  }

  .icons-clickeble {
    margin: 70px -15px 55px -15px;
    display: flex;
    align-items: center;
  }

  .icon-clickeble {
    display: table-cell;
    vertical-align: middle;
    border-radius: 100%;
    height: 70px;
    width: 70px;
    cursor: pointer;
    margin: 0 15px;
  }

  .icon-clickeble.active {
    height: 95px;
    width: 95px;
    border: 1px solid #000;
  }

  @media screen and (max-width: 1450px) {
    .icons-clickeble {
      margin-top: 40px;
      margin-bottom: 30px;
    }

    .block-content {
      margin-bottom: 40px;
    }
  }

  @media screen and (max-width: 1230px) {
    .icons-clickeble {
      margin-top: 20px;
      margin-bottom: 15px;
    }

    .block-content {
      margin-bottom: 20px;
    }

    .icon-clickeble {
      height: 50px;
      width: 50px;
    }

    .icon-clickeble.active {
      width: 65px;
      height: 65px;
    }
  }

  @media screen and (max-width: 1200px) {
    .video-with-text {
      display: block;
    }
    .visual-content, .text-content {
      width: 100%;
    }
    .text-content {
      text-align: {{ section.settings.mobile_content_alignment }};
      padding: 40px 15px;
    }
    .icons-clickeble {
      justify-content: {% if section.settings.mobile_content_alignment == "left" %}flex-start{% elsif section.settings.mobile_content_alignment == "center" %}center{% else %}flex-end{% endif %};
    }
  }
  
</style>

<script>
  var blocks = [];
  var varients = ["content-", "icon-", "visual-"];
  
  function selectContent(id) {
    blocks.forEach( function (id) {
      varients.forEach( function (varient) {
        try {
          document.getElementById(varient + id).classList.remove("active");   
        } catch (e) { alert(e); }
      });
    });  
    varients.forEach( function (varient) {
      document.getElementById(varient + id).classList.add("active");    
    });  
  }
</script>

<div class="video-with-text">
  <div class="visual-content">
    {% if section.blocks.size > 0 %}   
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'video' %}
            <video autoplay="" loop="" muted="" playsinline="" class="video visual {% if block == section.blocks.first %}active{% endif %}" id="visual-{{ block.id }}" data-bind="foreach: sources" controls="controls" controlslist="nodownload nofullscreen" alt="pumpkin nursing bra how to video">
              <source data-bind="attr: { type: type, src: src }" type="video/mp4" src="{{ block.settings.video }}">
            </video>
          {% when 'image' %}
            {%- if block.settings.image != blank -%}
              <div class="img visual {% if block == section.blocks.first %}active{% endif %}" id="visual-{{ block.id }}">
                {%- capture sizes -%}(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2){%- endcapture -%}
                {{ block.settings.image | image_url: width: 1500 | image_tag:
                  loading: 'lazy',
                  sizes: sizes,
                  widths: '165, 360, 535, 750, 1070, 1500'
                }}
              </div>
            {%- endif -%}
        {% endcase %}
      {% endfor %}
    {% endif %}
  </div>
  <div class="text-content">
    <div class="text-content-inner">
      <div class="container">
        <h2>{{ section.settings.heading }}</h2>
        {% if section.blocks.size > 0 %}
          <div class="icons-clickeble">
            {% for block in section.blocks %}
              <script>
                blocks.push("{{ block.id }}");
              </script>
              <img class="icon-clickeble {% if block == section.blocks.first %}active{% endif %}" id="icon-{{ block.id }}" onClick="selectContent('{{ block.id }}')" src="{{ block.settings.icon | img_url }}">
            {% endfor %}
          </div>
          {% for block in section.blocks %}
            <div id="content-{{ block.id }}" class="block-content {% if block == section.blocks.first %}active{% endif %}">
              <style>
                @media screen and (max-width: 1300px) {
                  .block-content-heading {
                    font-size: calc({{ block.settings.font-size-heading }}rem / 1.5) !important;
                  }         
                  .block-content-text {
                    font-size:{{ block.settings.font_size_text }}rem !important;
                  }                  
                }
              </style>
              <h2 style="font-size:{{ block.settings.font_size_heading }}rem;font-weight:{% if block.settings.font_weight_heading == true %}bold{% else %}unset{% endif %};" class="block-content-heading">{{ block.settings.heading }}</h2>
              <p style="min-height: 135px;font-size:{{ block.settings.font_size_text }}rem;font-weight:{% if block.settings.font_weight_text == true %}bold{% else %}unset{% endif %};" class="block-content-text">{{ block.settings.text }}</p>
            </div>
          {% endfor %}    
        {% endif %}
    
        <a class="button" href="{{ section.settings.btn_url }}">{{ section.settings.btn_text }}</a>
      </div>
    </div>
  </div>
</div>

