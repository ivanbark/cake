{% schema %}
{
  "name": "Video with text",
  "class": "section",
  "settings": [
    {
      "type": "select",
      "id": "desktop_content_alignment",
      "options": [
        {
          "value": "left",
          "label": "t:sections.image-with-text.settings.desktop_content_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.image-with-text.settings.desktop_content_alignment.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.image-with-text.settings.desktop_content_alignment.options__3.label"
        }
      ],
      "default": "left",
      "label": "t:sections.image-with-text.settings.desktop_content_alignment.label"
    },
    {
      "type": "color",
      "id": "text_side_background_color",
      "label": "Right half background color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Mobile layout"
    },
    {
      "type": "select",
      "id": "mobile_content_alignment",
      "options": [
        {
          "value": "left",
          "label": "t:sections.image-with-text.settings.mobile_content_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.image-with-text.settings.mobile_content_alignment.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.image-with-text.settings.mobile_content_alignment.options__3.label"
        }
      ],
      "default": "left",
      "label": "t:sections.image-with-text.settings.mobile_content_alignment.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    },
    {
      "type": "range",
      "id": "font_size_heading",
      "min": 0,
      "max": 5,
      "step": 0.2,
      "unit": "rem",
      "label": "Font size",
      "default": 1.4      
    },
    {
      "type": "checkbox",
      "id": "font_weight_heading",
      "default": false,
      "label": "Font weight bold"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Text",
      "default": "MEET PUMPKIN"
    },
    {
      "type": "color",
      "id": "bg_color_btn",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color_btn",
      "label": "Text color",
      "default": "#000"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "URL"
    },
    {
      "type": "range",
      "id": "font_size_btn",
      "min": 0,
      "max": 5,
      "step": 0.2,
      "unit": "rem",
      "label": "Font size",
      "default": 1.4      
    },
    {
      "type": "checkbox",
      "id": "font_weight_btn",
      "default": false,
      "label": "Font weight bold"
    }
  ],
  "blocks": [
    {
      "type": "video",
      "name": "Video item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "url",
          "id": "video",
          "label": "Video URL"
        },    
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Info"
        }
      ]
    },
    {
      "type": "image",
      "name": "Image item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Info"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  .video-with-text {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0;
    display: flex;
  }

  .visual-content {
    width: 50%;
  }

  .visual-content .video {
    display: none;
    width: 100%;
  }

  .visual-content .img {
    display: none;
  }

  .visual-content .img img {
    width: 100%;
    height: auto;
    margin-bottom: -9px;
  }
  
  .text-content {
    text-align: {{ section.settings.desktop_content_alignment }};
    background-color: {{ section.settings.text_side_background_color }};
    width: 50%;
  }

  .text-content-inner {
    max-width: 560px;
    margin: 0 auto;
    display: table;
    height: 100%;
  }

  .text-content-inner .container {
    display: table-cell;
    vertical-align: middle;
  }

  .text-content h2 {
    font-size: {{ section.settings.font_size_heading }}rem;
    font-weight: {% if section.settings.font_weight_heading == true %}bold{% else %}unset{% endif %};
  }

  .text-content .button {
    font-size: {{ section.settings.font_size_btn }}rem !important;
    font-weight: {% if section.settings.font_weight_btn == true %}bold{% else %}unset{% endif %} !important;
    background-color: {{ section.settings.bg_color_btn }} !important;
    color: {{ section.settings.text_color_btn }} !important;
  }
  
  .block-content {
    display: none;
  }

  .block-content.active {
    display: block;
  }

  .visual.active {
    display: block;
  }

  .icon {
    border-radius: 100%;
  }

  .icon.active {
    
  }
</style>

<script>
  var blocks = [];
  var varients = ["content-", "icon-", "visual-"];
  
  function selectContent(id) {
    blocks.forEach( function (id) {
      varients.forEach( function (varient) {
        try {
          document.getElementById(varient + id).classList.remove("active");   
        } catch (e) { alert(e); }
      });
    });  
    varients.forEach( function (varient) {
      document.getElementById(varient + id).classList.add("active");    
    });  
  }
</script>

<div class="video-with-text">
  <div class="visual-content">
    {% if section.blocks.size > 0 %}   
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'video' %}
            <video autoplay="" loop="" muted="" playsinline="" class="video visual" id="visual-{{ block.id }}" data-bind="foreach: sources" controls="controls" controlslist="nodownload nofullscreen" alt="pumpkin nursing bra how to video">
              <source data-bind="attr: { type: type, src: src }" type="video/mp4" src="{{ block.settings.video }}">
            </video>
          {% when 'image' %}
            {%- if block.settings.image != blank -%}
              <div class="img visual" id="visual-{{ block.id }}">
                {%- capture sizes -%}(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2){%- endcapture -%}
                {{ block.settings.image | image_url: width: 1500 | image_tag:
                  loading: 'lazy',
                  sizes: sizes,
                  widths: '165, 360, 535, 750, 1070, 1500'
                }}
              </div>
            {%- endif -%}
        {% endcase %}
      {% endfor %}
    {% endif %}
  </div>
  <div class="text-content">
    <div class="text-content-inner">
      <div class="container">
        <h2>{{ section.settings.heading }}</h2>
        {% if section.blocks.size > 0 %}
          <div class="icons">
            {% for block in section.blocks %}
              <script>
                blocks.push("{{ block.id }}");
              </script>
              <img class="icon" id="icon-{{ block.id }}" onClick="selectContent('{{ block.id }}')" src="{{ block.settings.icon | img_url }}">
            {% endfor %}
          </div>
          {% for block in section.blocks %}
            <div id="content-{{ block.id }}" class="block-content">
              <h2 class="block-content-heading">{{ block.settings.heading }}</h2>
              <p class="block-content-text">{{ block.settings.text }}</p>
            </div>
          {% endfor %}    
        {% endif %}
    
        <a class="button" href="{{ section.settings.btn_url }}">{{ section.settings.btn_text }}</a>
      </div>
    </div>
  </div>
</div>

<script>
  try {
    varients.forEach( function (varient) {
      document.getElementById(varient + blocks[0]).classList.add("active");    
    });    
  } catch (e) { alert(e); }
</script>

