{% schema %}
  {
    "name": "Blog overview",
    "settings": [
      
    ],
    "blocks": [
      {
        "type": "blog",
        "name": "Blog",
        "settings": [
          {
            "type": "blog",
            "id": "blog",
            "label": "Blog"
          }          
        ]
      }
    ]
  }
{% endschema %}

<style>
  .blogs {
    max-width: 1150px;
    margin: 0 auto;
  }

  .blog-header {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: baseline;
  }

  .blog-header {
    color: black !important;
  }

  .blog {
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }

  .blog-cards {
    display: flex;
    margin: 0 -30px;
  }

  .blog-card {
    width: fit-content;
    max-width: 315px;
    text-align: center;
    margin: 0 30px;
  }
</style>

<div class="blogs">
  {% for block in section.blocks %}
    <div class="blog">
      <div class="blog-header">
        <h2>{{ block.settings.blog.title }}</h2>
        <a href="{{ block.settings.blog.url }}" style="text-transform:uppercase;">See all</a>
      </div>
      <div class="blog-cards">
        {% for article in block.settings.blog.articles limit:3 %}
          <div class="blog-card">
            <a class="full-unstyled-link" href="{{ article.url }}">
              <img src="{{ article.image.src | image_url }}">
              <h2 style="font-size:{{ section.settings.font_size_card_title }}rem;font-weight:{% if section.settings.font_weight_card_title %}bold{% else %}unset{% endif %};">{{ article.title }}</h2>
            </a>
          </div>      
        {% endfor %}
      </div>
    </div>
  {% endfor %}
  
</div>