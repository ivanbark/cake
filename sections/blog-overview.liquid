{% schema %}
  {
    "name": "Blog overview",
    "settings": [
      
    ],
    "blocks": [
      {
        "type": "blog",
        "name": "Blog",
        "settings": [
          {
            "type": "blog",
            "id": "blog",
            "label": "Blog"
          }          
        ]
      }
    ]
  }
{% endschema %}

{% for block in section.blocks %}
  <div class="blog">
    <div class="blog-header">
      <h2>{{ block.settings.blog.title }}</h2>
      <a href="{{ block.settings.blog.url }}" style="text-transform:uppercase;">See all</a>
    </div>
    {% for article in block.settings.blog.articles limit:3 %}
      <div>
        <a class="full-unstyled-link" href="{{ article.url }}">
          <img src="{{ article.image.src | image_url }}">
          <h2 style="font-size:{{ section.settings.font_size_card_title }}rem;font-weight:{% if section.settings.font_weight_card_title %}bold{% else %}unset{% endif %};">{{ article.title }}</h2>
        </a>
      </div>      
    {% endfor %}
  </div>
{% endfor %}