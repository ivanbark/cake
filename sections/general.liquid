{% schema %}
{
  "name": "General",
  "blocks": [
    {
      "type": "link_list",
      "name": "Sidebar menu",
      "settings": [
        {
          "type": "link_list",
          "id": "sidebar-menu",
          "default": "footer",
          "label": "Menu"
        },
        {
          "type": "header",
          "content": "Heading"
        },
        {
          "type": "checkbox",
          "id": "show_menu_heading",
          "default": false,
          "label": "Show Heading"
        },
        {
          "type": "color",
          "id": "heading_color",
          "default": "#ad8260",
          "label": "Heading color"
        },
        {
          "type": "range",
          "id": "font_size_heading",
          "min": 0,
          "max": 5,
          "step": 0.2,
          "unit": "rem",
          "label": "Font size",
          "default": 1.4      
        },
        {
          "type": "checkbox",
          "id": "font_weight_heading",
          "default": false,
          "label": "Font weight bold"
        },
        {
          "type": "header",
          "content": "Text"
        },
        {
          "type": "range",
          "id": "font_size_text",
          "min": 0,
          "max": 5,
          "step": 0.2,
          "unit": "rem",
          "label": "Font size",
          "default": 1.4      
        },
        {
          "type": "checkbox",
          "id": "font_weight_text",
          "default": false,
          "label": "Font weight bold"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Heading",
          "label": "t:sections.footer.blocks.text.settings.heading.label"
        },
        {
          "type": "richtext",
          "id": "subtext",
          "default": "<p>Share contact information, store details, and brand content with your customers.</p>",
          "label": "t:sections.footer.blocks.text.settings.subtext.label"
        },
        {
          "type": "header",
          "content": "Mail"
        },
        {
          "type": "checkbox",
          "id": "sidebar-show-mail",
          "default": true,
          "label": "Show mail"
        },
        {
          "type": "text",
          "id": "sidebar-mail",
          "default": "mail@email.com",
          "label": "Mail"
        },
        {
          "type": "header",
          "content": "Font"
        },
        {
          "type": "range",
          "id": "font_size_heading",
          "min": 0,
          "max": 5,
          "step": 0.2,
          "unit": "rem",
          "label": "Font size heading",
          "default": 1.4      
        },
        {
          "type": "checkbox",
          "id": "font_weight_heading",
          "default": false,
          "label": "Font weight bold heading"
        },
        {
          "type": "range",
          "id": "font_size_text",
          "min": 0,
          "max": 5,
          "step": 0.2,
          "unit": "rem",
          "label": "Font size text",
          "default": 1.4      
        },
        {
          "type": "checkbox",
          "id": "font_weight_text",
          "default": false,
          "label": "Font weight bold text"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Category",
      "label": "Category Title"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "range",
      "id": "font_size_heading",
      "min": 0,
      "max": 5,
      "step": 0.2,
      "unit": "rem",
      "label": "Font size",
      "default": 1.4      
    },
    {
      "type": "checkbox",
      "id": "font_weight_heading",
      "default": false,
      "label": "Font weight bold"
    },
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "range",
      "id": "font_size_text",
      "min": 0,
      "max": 5,
      "step": 0.2,
      "unit": "rem",
      "label": "Font size",
      "default": 1.4      
    },
    {
