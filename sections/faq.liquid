{% schema %}
  {
    "name": "FAQ",
    "settings": [
      {
        "type": "header",
        "content": "Heading"
      },
      {
        "type": "text",
        "id": "title",
        "default": "Title",
        "label": "Title"
      },
      {
        "type": "range",
        "id": "font_size_section_heading",
        "min": 0,
        "max": 5,
        "step": 0.2,
        "unit": "rem",
        "label": "Font size",
        "default": 1.4      
      },
      {
        "type": "checkbox",
        "id": "font_weight_section_heading",
        "default": false,
        "label": "Font weight bold"
      },
      {
        "type": "header",
        "content": "Menu Heading"
      },
      {
        "type": "color",
        "id": "heading_color",
        "default": "#ad8260",
        "label": "Heading color"
      },
      {
        "type": "range",
        "id": "font_size_heading",
        "min": 0,
        "max": 5,
        "step": 0.2,
        "unit": "rem",
        "label": "Font size",
        "default": 1.4      
      },
      {
        "type": "checkbox",
        "id": "font_weight_heading",
        "default": false,
        "label": "Font weight bold"
      },
      {
        "type": "header",
        "content": "Links"
      },
      {
        "type": "range",
        "id": "font_size_links",
        "min": 0,
        "max": 5,
        "step": 0.2,
        "unit": "rem",
        "label": "Font size",
        "default": 1.4      
      },
      {
        "type": "checkbox",
        "id": "font_weight_links",
        "default": false,
        "label": "Font weight bold"
      }
    ],
    "blocks": [
      {
        "type": "link_list",
        "name": "Menu",
        "settings": [
          {
            "type": "link_list",
            "id": "menu",
            "label": "Menu"
          }          
        ]
      }
    ]
  }
{% endschema %}

<style>
  .faq {
    width: 80%;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
  }

  .faq-menu-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .faq-menu-list li a {
    text-decoration: none;
    color: black;
  }

  .faq-see-all {
    text-decoration: none;
    color: black;
    font-weight: bold;
    border-bottom: 2px solid black;
    font-size: {{ section.settings.font_size_links }}rem;
  }

  .faq-see-all::after {  
    content: "\2192";
    font-family: "Glyphicons Halflings";
    line-height: 1;
    display: inline-block;
    padding-left: 5px;
  }

  .faq-menu h2 {
    font-size: {{ section.settings.font_size_heading }}rem;
    font-weight: {% if section.settings.font_weight_heading %}bold{% else %}unset{% endif %};
    color: {{ section.settings.heading_color }};
  }

  .faq-menu-list a {
    font-size: {{ section.settings.font_size_links }}rem;
    font-weight: {% if section.settings.font_weight_links %}bold{% else %}unset{% endif %};    
  }

  .faq-title {
    font-size: {{ section.settings.font_size_section_heading }}rem;
    font-weight: {% if section.settings.font_weight_section_heading %}bold{% else %}unset{% endif %};    
  }
</style>

<h2 class="faq-title">{{ section.settings.title }}</h2>
<div class="faq">
 {% for block in section.blocks %}
   <div class="faq-menu">
     <h2>{{ block.settings.menu.title }}</h2>
      <ul class="faq-menu-list">
        {%- for link in block.settings.menu.links limit: 4 -%}
          <li>
            <a class="" href="{{ link.url }}" style="">
              {{ link.title }}
            </a>
          </li>
        {%- endfor -%}
      </ul>
     <a class="faq-see-all" href="{{ block.settings.menu.links.first.url }}">See all Questions</a>
   </div>
 {% endfor %}
</div>