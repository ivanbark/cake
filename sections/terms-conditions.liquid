{% schema %}
{
  "name": "Term + Conditions",
  "blocks": [
    {
      "type": "link_list",
      "name": "Sidebar menu",
      "settings": [
        {
          "type": "link_list",
          "id": "sidebar-menu",
          "default": "footer",
          "label": "Menu"
        },
        {
          "type": "range",
          "id": "font_size",
          "min": 0,
          "max": 5,
          "step": 0.2,
          "unit": "rem",
          "label": "Font size",
          "default": 1.4      
        },
        {
          "type": "checkbox",
          "id": "font_weight",
          "default": false,
          "label": "Font weight bold"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Heading",
          "label": "t:sections.footer.blocks.text.settings.heading.label"
        },
        {
          "type": "textarea",
          "id": "subtext",
          "default": "Share contact information, store details, and brand content with your customers.",
          "label": "t:sections.footer.blocks.text.settings.subtext.label"
        },
        {
          "type": "range",
          "id": "font_size_heading",
          "min": 0,
          "max": 5,
          "step": 0.2,
          "unit": "rem",
          "label": "Font size heading",
          "default": 1.4      
        },
        {
          "type": "checkbox",
          "id": "font_weight_heading",
          "default": false,
          "label": "Font weight bold heading"
        },
        {
          "type": "range",
          "id": "font_size_text",
          "min": 0,
          "max": 5,
          "step": 0.2,
          "unit": "rem",
          "label": "Font size text",
          "default": 1.4      
        },
        {
          "type": "checkbox",
          "id": "font_weight_text",
          "default": false,
          "label": "Font weight bold text"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "range",
      "id": "font_size_heading",
      "min": 0,
      "max": 5,
      "step": 0.2,
      "unit": "rem",
      "label": "Font size",
      "default": 1.4      
    },
    {
      "type": "checkbox",
      "id": "font_weight_heading",
      "default": false,
      "label": "Font weight bold"
    },
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "range",
      "id": "font_size_text",
      "min": 0,
      "max": 5,
      "step": 0.2,
      "unit": "rem",
      "label": "Font size",
      "default": 1.4      
    },
    {
      "type": "checkbox",
      "id": "font_weight_text",
      "default": false,
      "label": "Font weight bold"
    }
  ]
}
{% endschema %}

<link rel="stylesheet" href="{{ 'section-main-page.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'section-main-page.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="page-wrapper">

  {% if section.blocks.size > 0 %}
    <div class="sidebar">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'link_list' %}
            <div class="sidebar-menu">
              {%- if block.settings.sidebar-menu != blank -%}
                <ul class="menu-list">
                  {%- for link in block.settings.menu.links -%}
                    <li>
                      <a href="{{ link.url }}" class="" style="font-size: {{ block.settings.font_size }}rem; font-weight:{% if block.settings.font_weight == true %}bold{% else %}unset{% endif %};">
                        {{ link.title }}
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>
          {% when "text" %}
            <div class="sidebar-text">
              <h2 style="font-size: {{ block.settings.font_size_heading }}rem; font-weight: {% if block.settings.font_weight_heading == true %}bold{% else %}unset{% endif %};">{{ block.settings.heading }}</h2>
              <p style="font-size: {{ block.settings.font_size_text }}rem; font-weight: {% if block.settings.font_weight_text == true %}bold{% else %}unset{% endif %};">
                {{ block.settings.subtext }}
              </p>
            </div>          
        {% endcase %}
      {% endfor %}
    </div>
  
    <div class="page-width page-width--narrow section-{{ section.id }}-padding">
      <h1 style="font-size: {{ section.settings.font_size_heading }}rem; font-weight:{% if section.settings.font_weight_heading == true %}bold{% else %}unset{% endif %};" class="main-page-title page-title h0">
        {{ page.title | escape }}
      </h1>
      <div style="font-size: {{ section.settings.font_size_text }}rem; font-weight:{% if section.settings.font_weight_text == true %}bold{% else %}unset{% endif %};" class="rte">
        {{ page.content }}
      </div>
    </div>
  {% endif %}
  
</div>








